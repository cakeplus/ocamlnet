TOP_DIR = ../../..
include $(TOP_DIR)/Makefile.rules

REQUIRES = rpc,unix,netplex
OBJ = sort1_proto_aux.cmo sort1_proto_clnt.cmo sort1_proto_srv.cmo \
      sort1_worker.cmo sort1_controller.cmo
SRV_EXPLICIT_OBJ = sort1_server.cmo
CLNT_EXPLICIT_OBJ = sort1_client.cmo

XOBJ = $(OBJ:.cmo=.cmx)
SRV_EXPLICIT_XOBJ = $(SRV_EXPLICIT_OBJ:.cmo=.cmx)
CLNT_EXPLICIT_XOBJ = $(CLNT_EXPLICIT_OBJ:.cmo=.cmx)

CLEAN_LIST += *.run *.opt

all: sortlib.cma sort1_server.run sort1_client.run

opt: sortlib.cmxa sort1_server.opt sort1_client.opt

sort1_server.run: $(SRV_EXPLICIT_OBJ)
	$(OCAMLC) -o sort1_server.run sortlib.cma $(SRV_EXPLICIT_OBJ) -linkpkg

sort1_server.opt: $(SRV_EXPLICIT_XOBJ)
	$(OCAMLOPT) -o sort1_server.opt sortlib.cmxa $(SRV_EXPLICIT_XOBJ) -linkpkg

sort1_client.run: $(CLNT_EXPLICIT_OBJ)
	$(OCAMLC) -o sort1_client.run sortlib.cma $(CLNT_EXPLICIT_OBJ) -linkpkg

sort1_client.opt: $(CLNT_EXPLICIT_XOBJ)
	$(OCAMLOPT) -o sort1_client.opt sortlib.cmxa $(CLNT_EXPLICIT_XOBJ) -linkpkg

sortlib.cma: $(OBJ)
	$(OCAMLC) -o sortlib.cma -a $(OBJ)

sortlib.cmxa: $(XOBJ)
	$(OCAMLOPT) -o sortlib.cmxa -a $(XOBJ)

include depend
